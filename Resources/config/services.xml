<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="chashing.hasher.crc32" class="ESO\CHashingBundle\Hasher\Crc32" />

        <service id="chashing.hasher.md5" class="ESO\CHashingBundle\Hasher\Md5" />

        <service id="chashing.hasher.parametrizedhasher.sha256" class="ESO\CHashingBundle\Hasher\ParametrizedHasher">
            <argument>sha256</argument>
        </service>

    </services>

</container>
